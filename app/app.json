{
    "variables": {
      "vpc": "",
      "subnet": "",
      "ami_name": "APP-AMI-BUILD_{{isotime \"02-Jan-06 03_04_05\"}}"
    },

    "builders": [
      {
        "name": "APP-GENERIC-BUILD - DMINDS",
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "ami_description": "{{user `ami_name`}} AMI",
        "ami_description": "Amazon Linux CIS with Cloudwatch Logs agent",
        "associate_public_ip_address": "true",
        "vpc_id": "{{user `vpc`}}",
        "subnet_id": "{{user `subnet`}}",

        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ami-0ff760d16d9497662",
            "root-device-type": "ebs"
          },
          "owners": ["023451010066"],
          "most_recent": true
        },

        "instance_type": "t2.micro",
        "ssh_username": "centos",
        "ami_name": "{{user `ami_name`}}",
        "launch_block_device_mappings": [{
            "device_name": "/dev/sda1",
            "volume_size": 8,
            "volume_type": "gp2",
            "delete_on_termination": true
        }],

        "tags": {
          "Name": "{{user `ami_name`}}"
        },
        "run_tags": {
          "Name": "{{user `ami_name`}}"
        },
        "run_volume_tags": {
          "Name": "{{user `ami_name`}}"
        },
        "snapshot_tags": {
          "Name": "{{user `ami_name`}}"
        }
      }
    ],
    "post-processors": [
      {
        "output": "manifest-app.json",
        "strip_path": true,
        "type": "manifest"
      }
    ],
    "provisioners": [{
        "inline": [
          "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
        ],
        "type": "shell"
      },
      {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}",
        "scripts": [
          "./app/tasks/apache.sh"
        ],
        "type": "shell"
      }
    ]
  }
